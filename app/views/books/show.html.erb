

<!DOCTYPE html>
<html>
	<body>
		<div class="body">
				<p id="notice"></p>
				<!-- プロフィール画面 -->

					<div class="col-xs-3" >
						<h2>User info</h2>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
						<table class="table">
							<tbody>
								<tr></tr>
									<tr>
										<th>name</th>
										<th><%= @book.user.name %></th>
									</tr>
									<tr>
										<th>intoroduction</th>
										<th><%= @book.user.introduction %></th>
									</tr>
							</tbody>
						</table>
						<div class="row">
							<% if @book.user == current_user %>
								<p><%= link_to "", edit_user_path(@book.user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
							<% end %>
						</div>

					<!-- 投稿 -->
						<h2>New book</h2>
						<%= form_for(@books) do |f| %>

							<div class="field row">
								<label for="book title">Title</label>
								<%= f.text_field :title, class: "col-xs-12 book_title" %>
							</div>
							<div class="field row">
								<label for="book option">Opinion</label>
								<%= f.text_area :body, class: "col-xs-12 book_body" %>
							</div>
							<div class="action row">
								<%= f.submit :"Create Book", class: "btn btn-primary col-xs-12" %>
							</div>
						<% end %>
					</div>

					<div class="col-xs-9" >
						<h2>Book detail</h2>
						<table class="table table-hover table-inverse">
							<tbody>
									<tr>
										<td>
											<%= link_to user_path(@book.user) do %>
												<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br><%= @book.user.name %></td>
											<% end %>
										<td><%= @book.title %></td>
										<td><%= @book.body %></td>

										<% if @book.user == current_user %>
											<td><%= link_to 'Edit', edit_book_path, class: "btn-sm btn-success" %></td>
											<td><%= link_to 'Destroy',book_path, class: "btn-sm btn-danger", method: :delete,"data-confirm" => '本当に消しますか？' %></td>
										<% end %>
									</tr>
							</tbody>
						</table>
					</div>

			</div>
		</div>
	</body>
</html>

