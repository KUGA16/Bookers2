

<!DOCTYPE html>
<html>
	<body>
		<div class="body">
			<div class="container">
				<p id="notice"><%= flash[:notice] %></p>
				<!-- プロフィール画面 -->
				<div class="row">
					<div class="col-xs-3" >
						<h2>User info</h2>
						<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
						<table class="table">
							<tbody>
								<tr></tr>
									<tr>
										<th>name</th>
										<th><%= @user.name %></th>
									</tr>
									<tr>
										<th>intoroduction</th>
										<th><%= @user.introduction %></th>
									</tr>
							</tbody>
						</table>
						<div class="row">
							<% if @user.id == current_user.id %>
								<p><%= link_to "編集", edit_user_path(@user) %></p>
							<% end %>
						</div>

					<!-- 投稿 -->
						<h2>New book</h2>
						<%= form_for(@book) do |f| %>
							<div class="field row">
								<label for="book title">Title</label>
								<%= f.text_field :title %>
							</div>
							<div class="field row">
								<label for="book option">Opinion</label>
								<%= f.text_area :body %>
							</div>
							<div class="action row">
								<%= f.submit %>
							</div>
						<% end %>
					</div>

					<!-- 一覧 -->
					<div class="col-xs-p9" >
						<h2>Book detail</h2>
						<table class="table table-hover table-inverse">
							<tbody>
								<% @books.each do |book| %>
									<tr>
										<td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %></td>
										<td><%= book.title %></td>
										<td><%= book.body %></td>

										<% if @user == current_user %>
											<td><%= link_to 'Edit', edit_book_path(book) %></td>
											<td><%= link_to 'Destroy',book_path, method: :delete,"data-confirm" => '本当に消しますか？' %></td>
										<% end %>
									</tr>
								<% end %>
							</tbody>
						</table>
					</div>

					</div>
				</div>
			</div>
		</div>
	</body>
</html>

