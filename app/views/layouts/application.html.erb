
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse" >
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav id="slidemenu">
          <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
            <% if user_signed_in? %>
        <!-- ログイン済みの人 -->
              <li class="">
                <%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="">
                <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
              </li>
              <li class="">
                <%= link_to 'Books',books_path, class: "glyphicon glyphicon-book" %>
              </li>
              <li class="">
                <%= link_to 'logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
              </li>
        <!-- ログインしていない人 -->
            <% else %>
              <li class="">
                <%= link_to 'Home', root_path, class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="">
                <%= link_to 'About', home_about_path, class: "glyphicon glyphicon-link about" %>
              </li>
              <li class="">
                <%= link_to 'Sign up', new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
              </li>
              <li class="">
                <%= link_to 'login', new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
              </li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>

  <% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

  </body>



<div class="container">
 <div class="row">
<%= yield %>
  </div>
</div>



  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9" >
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
