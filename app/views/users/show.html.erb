
<!DOCTYPE html>
<html>
	<body>
		<div class="body">
			<p id="notice"></p>

					<!-- プロフィール画面 -->
					<div class="col-xs-3" >
						<h2>User info</h2>
						<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
						<table class="table">
							<tbody>
									<tr></tr>
									<tr>
										<th>name</th>
										<th><%= @user.name %></th>
									</tr>
									<tr>
										<th>intoroduction</th>
										<th><%= @user.introduction %></th>
									</tr>
							</tbody>
						</table>
						<div class="row" >
							<% if @user.id == current_user.id %>
								<p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
							<% else %>
								<p><%= link_to "", user_path(@users), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
							<% end %>
						</div>

						<!-- 投稿 -->
						<h2>New book</h2>
						<%= form_for(@book) do |f| %>
							<div class="field row">
								<label for="book title">Title</label>
								<%= f.text_field :title, class: "col-xs-12 book_title" %>
							</div>
							<div class="field row">
								<label for="book option">Opinion</label>
								<%= f.text_area :body, class: "col-xs-12 book_body" %>
							</div>
							<div class="action row">
								<%= f.submit :"Create Book", class: "btn btn-primary col-xs-12" %>
							</div>
						<% end %>
					</div>


							<!-- 投稿一覧 -->
					<div class="col-xs-9" >
						<h2>Books</h2>
						<table class="table table-hover table-inverse">
							<thead>

								<tr>
									<th></th>
									<th>Title</th>
									<th>Opinion</th>
									<th colspan="3"></th>
								</tr>
							</thead>
							<% @users.each do |users| %>
							<tbody>

									<tr>
										<td><%= link_to user_path(@user) do %>
											<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
											<% end %>
											</td>
										<td><%= link_to users.title, book_path(users.id) %></td>
										<td><%= users.body %></td>
									</tr>
							</tbody>
							<% end %>
						</table>
					</div>

		</div>
	</body>
</html>














