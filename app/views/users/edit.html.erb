<!-- ユーザ編集ページ -->

<!DOCTYPE html>
<html>
	<body>
		<div class="body">
			<div class="container">
				<p id="notice"></p>
				<h2>User info</h2>
				<%= form_for(@user) do |f| %>
					<div class="field">
						<label for="user_name">Name</label>
						<%= f.text_field :name %>
					</div>
					<div class="field">
						<label for="user_image">Image</label>
						<%= attachment_image_tag @user,:profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
						<%= f.attachment_field :profile_image,placeholder: "プロフィール画像", class: "user-edit-form" %>
					</div>
					<div class="field">
						<label for="user_introduction">introduction</label>
						<%= f.text_area :introduction %>
					</div>
					<div class="actions">
						<%= f.submit %>
					</div>
				<% end %>
			</div>
		</div>
	</body>
</html>